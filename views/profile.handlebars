<div class="profile">
  <section class="feed">
    {{#each posts as |post|}}
    <article class="post">
      <ul class="post-header">
        <li>
          <h3><a href="/post/{{id}}">{{title}}</a></h3>
        </li>
        <li>
          <h5>{{../name}} - {{format_date date_created}}</h5>
        </li>
      </ul>

      <p class="post-content">
        {{content}}
      </p>
    <button type="button" class="delete-post">Delete</button>
    </article>
    {{/each}}
  </section>

  <section class="poster">
    <form>
      <input type="text" id="poster-title" name="title" placeholder="Title"><br />
      <textarea id="poster-content" name="content" rows="4" cols="50" maxlength="120" placeholder="Your post here!" required></textarea><br />
      <input type="submit" id="submit-post" value="Submit">
    </form>
  </section>

  
</div>

<script src=".js/profile.js"></script>
